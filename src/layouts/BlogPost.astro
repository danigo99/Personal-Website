---
import BaseHead from "../components/BaseHead.astro";
import * as styles from "./BlogPost.css";
const { frontmatter } = Astro.props;
---

<html>
  <head>
    <!-- Add other Head elements here, like styles and meta tags. -->
    <title>{frontmatter.title}</title>
    <BaseHead title={frontmatter.title} description="A blog post by DBG <3" />
  </head>
  <body class={styles.body}>
    <div class={styles.container}>
      <div class={styles.closeButton}>
        <a href="/"><img src="/close.svg" height={40} /></a>
      </div>
      <h1>{frontmatter.title}</h1>
      <div class={styles.date}>{frontmatter.date}</div>
      <slot />
    </div>
  </body>
</html>
