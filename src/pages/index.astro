---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import TextTile from "../components/TextTile/TextTile.astro";
import * as styles from "./index.css";
import {
  text,
  container as textTile,
} from "../components/TextTile/TextTile.css";
import ImageTile from "../components/ImageTile/ImageTile.astro";
import LinksTile from "../components/LinksTile/LinksTile.astro";
import Link from "../components/Link/Link.astro";
import clsx from "clsx";
import BlogTile from "../components/BlogTile/BlogTile.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class={styles.body}>
    <div class={styles.gridContainer}>
      <TextTile className={styles.oneColumGridSquare} text="Daniel" />
      <ImageTile
        className={clsx(styles.oneColumGridSquare, styles.twoRowGridSquare)}
        src="/me.webp"
      />
      <div
        class={clsx(
          styles.oneColumGridSquare,
          styles.twoRowGridSquare,
          textTile,
          styles.brownTile
        )}
      >
        <p class={text.small}>
          Hey 👋 I'm Dan, a fullstack developer at <Link
            href="https://www.theodo.co.uk/"
          >
            Theodo UK
          </Link> and co-founder of <Link href="https://bento.me/575">575</Link>
        </p>
      </div>
      <TextTile
        className={styles.oneColumGridSquare}
        text="📝 Simplify your full-stack applications with XState"
        href="/posts/simplify-your-applications-with-xstate/"
        variant="small"
        target="_self"
      />
      <TextTile className={styles.twoColumGridSquare} text="Belo Gonçalves" />
      <TextTile
        className={styles.oneColumGridSquare}
        text="🎥 Bringing poetry to the masses: a 575 story"
        href="https://www.youtube.com/watch?v=UpuT8m8A2ic"
        variant="small"
      />
      <ImageTile
        className={clsx(styles.oneColumGridSquare, styles.twoRowGridSquare)}
        src="/575Screen.webp"
        href="https://apps.apple.com/gb/app/575/id6446295950"
      />
      <LinksTile className={styles.oneColumGridSquare} />
    </div>
  </body>
</html>
